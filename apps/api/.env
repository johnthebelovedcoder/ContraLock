# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./data/delivault.sqlite

# JWT Configuration
JWT_SECRET=dev-secret-key-change-this-in-production
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_SECRET=dev-refresh-secret-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# API Keys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/social/google/callback

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/api/v1/social/linkedin/callback

# Email Configuration (for development)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@delivault.com
EMAIL_FROM_NAME=Delivault
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# Cache Configuration
USE_REDIS=false
REDIS_URL=redis://localhost:6379
REDIS_CONNECT_TIMEOUT=5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# File Uploads
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_DIR=./uploads